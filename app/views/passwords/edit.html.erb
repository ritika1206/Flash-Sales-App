<%= form_with model: @user, method: :patch, url: password_url(verification_token: @user.verification_token)  do |form| %>
  <% errors = @user.errors.as_json(full_messages: true) %>

  <%= form.hidden_field :password_changing, value: 1 %>

  <%= form.label :password, t(:new_password) %>
  <%= form.password_field :password %>
  <%= render partial: 'layouts/error', locals: { attr: :password, entity: @user }%>

  <%= form.label :password_confirmation, t(:new_password_confirmation) %>
  <%= form.password_field :password_confirmation %>
  <%= render partial: 'layouts/error', locals: { attr: :password_confirmation, entity: @user }%>

  <button type="submit">Submit</button>
<% end %>
