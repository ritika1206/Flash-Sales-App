<div class='users-container'>
  <%= render partial: 'users/user', locals: { user: @user, creation_updation_show: true, show_link: false } %>
</div>

<% if @orders.present? %>
  <h3 class='order-head'><%= @user.name.capitalize + "'s "%> order details</h3>
  <% @orders.reverse.each do |order| %>
    <%= render partial: 'orders/order', locals: { order: order }%>
  <% end %>
<% else %>
  <h3 class='order-head'>No order exist for <%= @user.name.capitalize %></h3>
<% end %>
